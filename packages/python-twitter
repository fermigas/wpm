#!/bin/bash 

BINTYP="github"
BINURL="git://github.com/bear/python-twitter.git"
declare -a DEPEND=( "python27" "python-oauth2" )    # What happens if git is not in PATH?
SETUP="python setup.py install"

function check_install {
    python -c 'exec "try: import twitter\nexcept:exit(4)"'
    echo $?
}

case "$1" in 
    "bintype" )
        echo $BINTYP;;
    "binurl" )
        echo $BINURL;;
    "depend" )
        echo ${DEPEND[@]};;
    "setup_command" )
        echo $SETUP;;
    "check_install" ) 
        check_install;;
    "author" ) 
        echo "@hugo_dc" ;; 
esac
