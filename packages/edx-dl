#!/usr/bin/env bash

BINTYP="github"
BINURL="git://github.com/shk3/edx-downloader.git"
O_FILE="edx-downloader"
declare -a DEPEND=( "python27" "youtube-dl" "python-beautifulsoup" )

function setup {
    echo "cd $O_FILE ; "
    echo "cp edx-dl.py ~/bin/wpm/bin/edx-dl.py ; "
    echo "echo -e '#!/usr/bin/env bash ' > ~/bin/wpm/bin/edx-dl"
    echo "echo -e 'python ~/bin/wpm/bin/edx-dl.py' >> ~/bin/wpm/bin/edx-dl"
    echo "cd - >> stderr ; "
}

function check_install {
    if [ -f ~/bin/wpm/bin/edx-dl.py ] ; then 
        echo "0"
    else
        echo "1"
    fi
}

case "$1" in 
    "bintype" )
        echo $BINTYP;;
    "binurl" )
        echo $BINURL;;
    "depend" )
        echo ${DEPEND[@]};;
    "o_file" ) 
        echo $O_FILE ;; 
    "setup_command" )
        setup;;
    "check_install" ) 
        check_install;;
    "author" ) 
        echo "@hugo_dc" ;; 
esac
