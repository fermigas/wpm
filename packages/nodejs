#!/usr/bin/env bash

BINTYP="msi"
BINURL="http://nodejs.org/dist/v0.10.8/node-v0.10.8-x86.msi"
O_FILE="node-v0.10.8-x86.msi"
MD5="a363dbcaf9f2fbee955d890351afba34"
declare -a DEPEND=("msiexec")

SETUP="msiexec -i"

function check_install {
    node --version >> stderr
    echo $?
}

case "$1" in 
    "bintype" )
        echo $BINTYP;;
    "binurl" )
        echo $BINURL;;
    "o_file" )
        echo $O_FILE;;
    "md5" ) 
        echo $MD5;;
    "depend" )
        echo ${DEPEND[@]};; 
    "check_install" )
        check_install;;
    "setup_command" )
        echo $SETUP ;;
esac

